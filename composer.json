{
    "name": "anteris-dev/model",
    "description": "Laravel-like models detached from the framework.",
    "license": "MIT",
    "authors": [
        {
            "name": "Aidan Casey",
            "email": "aidan.casey@anteris.com"
        }
    ],
    "autoload": {
        "psr-4": {
            "Anteris\\Model\\": "./src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Anteris\\Tests\\Model\\": "./tests"
        }
    },
    "require": {
        "illuminate/contracts": "^8.0"
    },
    "require-dev": {
        "phpunit/phpunit": "^9.0",
        "vimeo/psalm": "^4.0",
        "friendsofphp/php-cs-fixer": "^2.0"
    },
    "scripts": {
        "fix": "vendor/bin/php-cs-fixer fix --allow-risky=yes",
        "stat": "vendor/bin/psalm",
        "test": "vendor/bin/phpunit"
    }
}
